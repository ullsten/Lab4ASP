@{
    ViewBag.Title = "Send Email";
}

<div class="container">
    <div class="card mx-auto mt-5" style="max-width: 400px;">
        <div class="card-body">
            <h2 class="card-title text-center">Send Email</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.Label("From Email:")
                    @Html.TextBox("fromEmail", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Subject:")
                    @Html.TextBox("subject", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Body:")
                    @Html.TextArea("body", null, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">Send Email</button>
            }
        </div>
    </div>
</div>
