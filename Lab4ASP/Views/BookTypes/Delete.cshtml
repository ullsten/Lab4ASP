@model Lab4ASP.Models.BookType

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column align-items-center mt-5">
    <div class="card w-50">
        <div class="card-body">
            <h2 class="card-title">Lab4ASP Library</h2>
            <h3 class="card-subtitle mb-4">Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm">
                        @Html.DisplayNameFor(model => model.BookTypeName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BookTypeName)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="BookTypeId" />
                    <input type="submit" value="Delete" class="btn btn-danger m-0 p-1" />
                    <a asp-action="Index" class="btn btn-dark m-0 p-1">Back to List</a>
                    <div class="mt-2">
                        <a asp-controller="LoanHistories" asp-action="GetUserBook" class="btn btn-secondary m-0 p-1">Back to dashboard</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
