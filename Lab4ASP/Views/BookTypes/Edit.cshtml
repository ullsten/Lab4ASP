@model Lab4ASP.Models.BookType

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-column align-items-center mt-5">
    <div class="card w-50">
        <div class="card-body">
            <h4 class="card-title">Lab4ASP Library Edit genre</h4>
            <hr />
            <div class="row">
                <div class="col-md">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="BookTypeId" />
                        <div class="form-group">
                            <label asp-for="BookTypeName" class="control-label"></label>
                            <input asp-for="BookTypeName" class="form-control" />
                            <span asp-validation-for="BookTypeName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-dark">Back to List</a>
                            <div class="mt-2">
                                <a asp-controller="LoanHistories" asp-action="GetUserBook" class="btn btn-secondary m-0 p-1">Back to dashboard</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
