@model IEnumerable<Lab4ASP.Models.JunctionTables.BookAuthor>

@{
    ViewData["Title"] = "Index";
}

<div class="card mt-5 text-center">
    <h1>Lab4ASP Library Books with Author</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary m-0 p-1">Add new author to book</a>
        <a asp-controller="LoanHistories" asp-action="GetUserBook" class="btn btn-dark m-0 p-1">Dashboard</a>
    </p>

</div>
<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped table-hover table-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Books.BookId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Books.BookTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Books.BookDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authors.AuthorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Books.PublishedYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Books.BookTypes.BookTypeName)
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.BookId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.BookTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.BookDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Authors.AuthorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.PublishedYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Books.BookTypes.BookTypeName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BookAuthorId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.BookAuthorId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.BookAuthorId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
