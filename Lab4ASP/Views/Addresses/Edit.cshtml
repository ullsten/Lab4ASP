@model Lab4ASP.Models.Address

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-column align-items-center">
    <div class="card w-50">
        <div class="card-body">
            <h1 class="card-title">Lab4ASP Library Addresses</h1>
            <h4>Fill the form to edit address to user/employee</h4>
            <hr />
            <div class="row">
                <div class="col-md">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AddressId" />
                        <div class="form-group">
                            <label asp-for="Street" class="control-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PostalCode" class="control-label"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Users" class="control-label"></label>
                            <select asp-for="FK_UserId" class="form-control" asp-items="ViewBag.FK_UserId"></select>
                            <span asp-validation-for="FK_UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <a asp-controller="LoanHistories" asp-action="GetUserBook" class="btn btn-dark">Back to dashboard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
