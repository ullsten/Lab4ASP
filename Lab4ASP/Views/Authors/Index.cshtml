@model IEnumerable<Lab4ASP.Models.Author>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">

<h1>Lab4ASP Library Author register</h1>
            <a class="btn btn-primary" asp-action="Create">Add new author to library</a>
            <a class="btn btn-dark" asp-controller="LoneHistories" asp-action="GetUserBook">Dashboard</a>
            <hr />
<table class="table table-striped table-light table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> 
                @*<a asp-action="Details" asp-route-id="@item.AuthorId">Details</a> |*@
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
</div>
</div>
